<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body class="container">
    <div class="row">
        <div class="navbar navbar-inverse" role="navigation">
            <a href="#" class="navbar-left">
                <img src="~/Content/Images/arcane-tinmen-logo-8c.jpg" />
            </a>
            <a class="navbar-brand" href="#">Board Game Sleeves</a>
            @*  @Html.Action("Summary", "Cart") *@
        </div>
    </div>

    <div class="row panel">
        <div id="categories" class="col-md-2">
            @Html.Action("Menu", "Nav")
        </div>

        <div class="col-md-10">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="col-md-12 text-center">
            <p>&copy; @DateTime.Now.Year - Board Game Sleeves an Arcane Tinmen Brand - www.boardgamesleeves.com</p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>