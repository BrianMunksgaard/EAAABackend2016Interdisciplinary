@using bgs.Models

@model List<Category>

@Html.RouteLink("Home", new
{
    controller = "Catalogue",
    action = "Index",
    categoryCode = string.Empty,
    page = 1
}, new
{
    @class = "btn btn-block btn-default btn-md" + (string.IsNullOrEmpty(ViewBag.SelectedCategory) ? " btn-primary" : "")
})


@foreach (Category category in Model)
{
    @Html.RouteLink(category.CategoryText, new
    {
        controller = "Catalogue",
        action = "Index",
        categoryCode = category.CategoryCode,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-default btn-md" + (category.CategoryCode == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}
