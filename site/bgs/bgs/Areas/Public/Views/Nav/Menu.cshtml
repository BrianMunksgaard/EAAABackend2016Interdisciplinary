@using bgs.Models

@model List<Category>

@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-block btn-default btn-md" })

@foreach (Category category in Model)
{
    @Html.RouteLink(category.CategoryText, new
    {
        controller = "Catalogue",
        action = "Index",
        category = category.CategoryId,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-default btn-lg" + (category.CategoryId == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}

@Html.ActionLink("Cart", "Index", "Home", null, new { @class = "btn btn-block btn-default btn-md" })