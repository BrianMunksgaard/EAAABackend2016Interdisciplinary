@model bgs.Models.Game

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GameName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GameCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductsFit)
        </dt>
        <dd>
            @foreach (var pf in Model.ProductsFit)
            {
                if (!string.IsNullOrEmpty(pf.Comment))
                {
                    @Html.Raw(pf.Product.ProductName + " (" + pf.Comment + ")");
                }
                else
                {
                    @Html.DisplayName(pf.Product.ProductName)
                }
                <br />
            }
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-sm" />
            @Html.ActionLink("Cancel", "Index", new { area = "Admin" }, new { @class = "btn btn-default btn-sm" })
        </div>
    }
</div>
