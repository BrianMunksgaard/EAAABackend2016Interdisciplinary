@model bgs.Models.Game

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.GameName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GameCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductsFit)
        </dt>
        <dd>
            @foreach (var pf in Model.ProductsFit)
            {
               @Html.Partial("GameProductRelation", pf)
            }
        </dd>

